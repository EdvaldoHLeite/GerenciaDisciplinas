<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @disciplina.nome %>
</p>

<p>
  <strong>Anoletivo:</strong>
  <%= @disciplina.anoLetivo %>
</p>

<p>
  <strong>Turma:</strong>
  <%= @disciplina.turma_id %>
</p>

<p>
  <strong>User:</strong>
  <%= @disciplina.user_id %>
</p>

<p>
  <strong>Atividades </strong>
<table>
  <thead>
  <tr>
    <th>Titulo</th>
    <th>Descrição</th>
    <th>Bimestre</th>
    <th>Média</th>
  </tr>
  </thead>

  <tbody>
  <% @disciplina.atividades.each do |atividade| %>
