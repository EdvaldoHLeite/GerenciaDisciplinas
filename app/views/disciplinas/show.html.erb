      <td><%= atividade.titulo %></td>
      <td><%= atividade.descricao %></td>
      <td><%= atividade.bimestre %></td>
      <td><%= atividade.media %></td>
      <td><%= link_to 'Ver Atividade', atividade %></td>
    </tr>
  <% end %>
  </tbody>
</table>
