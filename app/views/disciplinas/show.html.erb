<%= link_to 'Edit', edit_disciplina_path(@disciplina), id: "edit-#{@disciplina.nome}-#{@disciplina.anoLetivo}-#{@disciplina.turma_id}-#{@disciplina.user_id}" %> |
<%= link_to 'Back', disciplinas_path %>
