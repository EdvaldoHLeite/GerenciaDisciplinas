<p id="notice"><%= notice %></p>

<h1>Atividades</h1>

<%= "Bimestre:" %>
<% [1,2,3,4].each do |bimestre| %>
  <%= link_to bimestre, {controller: 'atividades', action: 'index', bimestre: bimestre}  %>
<% end %>
<%= link_to 'Todos', {controller: 'atividades', action: 'index'}  %>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Bimestre</th>
      <th>Data</th>
      <th>Disciplina</th>
      <th>Média das avaliações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atividades.each do |atividade| %>
      <tr>
        <td><%= atividade.titulo %></td>
        <td><%= atividade.descricao %></td>
        <td><%= atividade.bimestre %></td>
        <td><%= atividade.data %></td>
        <td><%= atividade.disciplina_id %></td>
        <td><%= atividade.media %></td>
        <td><%= link_to 'Show', atividade %></td>
        <td><%= link_to 'Edit', edit_atividade_path(atividade) %></td>
        <td><%= link_to 'Destroy', atividade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Atividade', new_atividade_path %>
