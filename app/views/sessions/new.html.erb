<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag "Username" %>
    <%= text_field_tag :username, nil, placeholder: "Username" %>
  </div>

  <div class="field">
    <%= label_tag "Password" %>
    <%= password_field_tag :password, nil, placeholder: "Password" %>
  </div>

  <div class="actions">
    <%= submit_tag "Log In"%>
  </div>
<% end %>
